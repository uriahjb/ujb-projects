%% Playing around with classes. Gotta figure out this stuff.

classdef test_class
    
    properties
        x;
        y;
        z;
        n;
        verts_x;
        verts_y;
        verts_z;
        
    end
    
    methods
        
        function obj = test_class(x, y, z, n)
            obj.x = x;
            obj.y = y;
            obj.z = z;
            obj.n = n;
            [verts_x, Y, Z] = sphere(obj.n);
            
        end
        
        function disp(obj)
            disp(' ')
            disp(obj.x)
            disp(obj.y)
            disp(obj.z)
        end
        
        function draw(obj)
            hold on 
            surf(obj.verts(1,:), obj.verts(2,:), obj.verts(3,:))
        end
    end
    
end